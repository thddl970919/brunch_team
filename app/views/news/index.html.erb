<%= link_to "뉴스 쓰기", "/news/new" %><br>
<%@posts.each do |x|%>

<div class="row" style="margin-right: -15px; margin-left: -15px; font-family: 'Gaegu', cursive;">
  <div class="col-sm-6 col-md-4" style="width: 20%; float: left;">
    <div class="thumbnail">
      <%=image_tag x.image.url %>
      <div class="caption">
        <h3><a href='/news/show/<%=x.id%>' class="list-group-item"><%=x.news_name%></a></h3>
        <p>...</p>
        <p><a href="/news/destroy/<%=x.id%>" class="btn btn-primary" role="button">삭제</a> 
        <a href="/news/edit/<%=x.id%>" class="btn btn-default" role="button">수정</a></p>
      </div>
    </div>
  </div>
</div>

<% end %>

